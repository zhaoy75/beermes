{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/recipe.schema.json",
  "title": "Manufacturing Recipe Definition",
  "type": "object",
  "required": ["schema_version", "base", "flow"],

  "properties": {
    "schema_version": { "type": "string" },

    "metadata": {
      "type": "object",
      "additionalProperties": true
    },

    "base": {
      "type": "object",
      "required": ["quantity", "uom"],
      "properties": {
        "quantity": { "type": "number", "exclusiveMinimum": 0 },
        "uom": { "type": "string" },
        "scaling": { "type": "string" }
      }
    },

    "product": {
      "type": "object",
      "additionalProperties": true
    },

    "materials": {
      "type": "object",
      "properties": {
        "required": {
          "type": "array",
          "items": { "$ref": "#/$defs/materialRequirement" }
        }
      }
    },

    "targets": {
      "type": "object",
      "additionalProperties": true
    },

    "equipment": {
      "type": "object",
      "additionalProperties": true
    },

    "storage": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/storageConstraint" }
    },

    "data_collection": {
      "type": "object",
      "additionalProperties": true
    },

    "haccp": {
      "type": "object",
      "additionalProperties": true
    },

    "flow": {
      "$ref": "#/$defs/flow"
    }
  },

  "$defs": {
    "materialRequirement": {
      "type": "object",
      "required": ["material_id", "qty", "uom"],
      "properties": {
        "material_id": { "type": "string" },
        "role": { "type": "string" },
        "qty": { "type": "number", "minimum": 0 },
        "uom": { "type": "string" },
        "basis": { "type": "string" }
      }
    },

    "storageConstraint": {
      "type": "object",
      "required": ["max_hold_time", "uom"],
      "properties": {
        "max_hold_time": { "type": "number", "minimum": 0 },
        "uom": { "type": "string" },
        "storage_type": { "type": "string" },
        "min_temp": { "type": "number" },
        "max_temp": { "type": "number" }
      }
    },

    "stepIO": {
      "type": "object",
      "required": ["material_id", "qty", "uom"],
      "properties": {
        "material_id": { "type": "string" },
        "qty": { "type": "number" },
        "uom": { "type": "string" },
        "basis": { "type": "string" },
        "type": { "type": "string" },
        "yield_factor": { "type": "number" }
      }
    },

    "step": {
      "type": "object",
      "required": ["id", "name"],
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "type": { "type": "string" },
        "inputs": { "type": "array", "items": { "$ref": "#/$defs/stepIO" } },
        "outputs": { "type": "array", "items": { "$ref": "#/$defs/stepIO" } },
        "parameters": { "type": "array" },
        "equipment_req": { "type": "array" }
      }
    },

    "dependency": {
      "type": "object",
      "required": ["from", "to", "type"],
      "properties": {
        "from": { "type": "string" },
        "to": { "type": "string" },
        "type": { "type": "string" }
      }
    },

    "flow": {
      "type": "object",
      "required": ["steps"],
      "properties": {
        "steps": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/step" }
        },
        "dependencies": {
          "type": "array",
          "items": { "$ref": "#/$defs/dependency" }
        }
      }
    }
  }
}
